<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controller.AddCinemaController">
    <!-- 顶部导航栏 -->
    <HBox spacing="10" style="-fx-background-color: #336699;">
        <Button text="BackToCinemaManagement" onAction="#goBackToCinemaManagement"/>
    </HBox>

    <!-- 添加影院表单 -->
    <GridPane hgap="10" vgap="10" style="-fx-padding: 20;">
        <Label text="Cinema Name: " GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="cinemaNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Cinema Address: " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="cinemaAddressField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Cinema Phone: " GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="cinemaPhoneField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Button text="Save" onAction="#saveCinema" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>
</VBox>