<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.SeatSelectionController">
    <HBox spacing="10" layoutY="0.0" style="-fx-background-color: #336699;">
        <Button text="System Home" onAction="#goToSystemHome" />
        <Button text="Personal Page" onAction="#goToPersonalPage" />
    </HBox>

    <TilePane fx:id="seatLayout" layoutX="50" layoutY="80" hgap="10" vgap="10" style="-fx-padding: 10;">
    </TilePane>

    <Button text="Buy Tickets" layoutX="400" layoutY="500" onAction="#proceedToOrderConfirmation" />
    <Button text="Back" layoutX="300" layoutY="500" onAction="#goBackToMovieDetail" />
</AnchorPane>